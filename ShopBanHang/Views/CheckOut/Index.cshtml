@using ShopBanHang.Models;
@model ShopBanHang.Models.KhachHang

@{
    ViewBag.Title = "Index";
    CartShop s = ViewData["Cart"] as CartShop;

}
<section id="do_action">
<main role="main">
    Block content - Đục lỗ trên giao diện bố cục chung, đặt tên là `content`
    <div class="container mt-4">
        <form class="needs-validation" name="frmthanhtoan" method="post"
              action="#">
            <input type="hidden" name="kh_tendangnhap" value="dnpcuong">

            <div class="py-5 text-center">
                <i class="fa fa-credit-card fa-4x" aria-hidden="true"></i>
                <h2>Thanh toán</h2>
                <p class="lead">Vui lòng kiểm tra thông tin Khách hàng, thông tin Giỏ hàng trước khi Đặt hàng.</p>
            </div>
            @using (Html.BeginForm("SaveToDataBase", "Home", FormMethod.Post))
            {
                <div class="row"
                <div class="col-md-8 order-md-1">
                    <h4 class="mb-3">Thông tin khách hàng</h4>
                    <div class="row">
                        <div class="col-md-12">
                            <label for="kh_ten">Họ tên</label>
                            @Html.TextBoxFor(m => m.tenKH, new {@class = "form-control", @placeholder = "Display Name" })
                        </div>
                        <div class="col-md-12">
                            <label class="radio-inline">@Html.RadioButton("gioiTinh", true) Nam</label>
                            <label class="radio-inline">@Html.RadioButton("gioiTinh", false ) Nữ</label>
                        </div>
                        <div class="col-md-12">
                            <label for="kh_diachi">Địa chỉ</label>
                            @Html.TextBoxFor(m => m.diaChi, new { @class = "form-control", @placeholder = "Email" })
                        </div>
                        <div class="col-md-12">
                            <label for="kh_dienthoai">Điện thoại</label>
                            @Html.TextBoxFor(m => m.soDT, new { @class = "form-control", @placeholder = "Your phone number" })
                        </div>
                        <div class="col-md-12">
                            <label for="kh_email">Ngày sinh</label>
                            @Html.TextBoxFor(m => m.email, new { @type = "date", @placeholder = "Email address" })
                        </div>
                        <div class="col-md-12">
                            <label for="kh_ngaysinh">Địa chỉ giao hàng</label>
                            @Html.TextBoxFor(m => m.diaChi, new { @class = "form-control", @placeholder = "Customer address" })

                        </div>
                    </div>
                    </div>
                    <hr class="mb-4">
                         <label  class="btn btn-default"><a href="@Url.Action("Index", "Single_products")  ">Quay lại giỏ hàng</a></label>
            }
                        <button class="btn btn-primary btn-lg btn-block" type="submit" name="btnDatHang"><a href="@Url.Action("Index", "Home")">Đặt hàng</a> </button>
            
                      <thead>
                        <tr class="cart_menu">
                            <td class="image">Sản phẩm</td>
                            <td class="description">Tên sản phẩm</td>
                            <td class="price">Giá bán</td>
                            <td class="price">Số lượng</td>
                            @*<td class="quantity">Số lượng</td>*@
                            <td class="total">Thành tiền</td>
                        </tr>
                    </thead>
                    <tbody>
                <tr>
                    @{
                        foreach (ChiTietDonHang i in s.SanPhamDC.Values)
                        {
                <tr>
                    <td class="cart_product">
                        <a href=""><img src="@Common.GetIamgeOfProductByID(i.maSP)" alt=""></a>
                    </td>
                    <td class="cart_description">
                        <h4><a href="">@Common.GetNameOfProductByID(i.maSP)</a></h4>
                        <p>Mã Sản phẩm: @i.maSP</p>
                    </td>
                    <td class="cart_price">
                        <p>@String.Format("{0:#, ##0 Vnđ}", i.giaBan)</p>
                    </td>
                    <td class="cart_quantity">
                        <div class="cart_quantity_button" style=" display: flex; flex-direction: row; flex-wrap: nowrap; align-content: center; justify-content: center; align-items: center;">
                            <input class="cart_quantity_input" type="text" name="quantity" value="@i.soLuong" autocomplete="off" size="2">

                        </div>
                    </td>
                    <td class="cart_total">
                        <p class="cart_total_price">@s.monneyOfOneProduct(i)</p>
                    </td>
                </tr>
                    }
                    }
                </tbody>
            </table>
        </div>
        </div>
        </section> <!--/#cart_items-->

        
            <div class="container">
                <div class="col-sm-6">
                    <div class="total_area">
                        <ul>
                            <li>Tổng trị giá <span>@s.totalOfCartShop()</span></li>
                            <li>Thuế VAT 10% <span>@((s.totalOfCartShop()*10)/100)</span></li>
                            <li>Phí giao hàng <span>Free</span></li>
                            <li>Tổng thành tiền <span>@(s.totalOfCartShop() - (s.totalOfCartShop() * 10)/100)</span></li>
                        </ul>
                        <a class="btn btn-default update" href="">Update</a>
                        <a class="btn btn-default check_out" href="@Url.Action("Index", "CheckOut")">Check Out</a>
                    </div>
                </div>
            </div>
            </div>
        </section>

        </form>
        </div>
    </main>